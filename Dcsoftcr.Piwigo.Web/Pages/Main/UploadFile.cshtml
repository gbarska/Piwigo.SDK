@page
@model Dcsoftcr.Piwigo.Web.Pages.Main.UploadFileModel
@{
    ViewData["Title"] = "UploadFile";
}

<h1>UploadFile</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FileUpload.File" class="control-label"></label>
                <input type="file" id="FileUpload.File" name="FileUpload.File" class="form-control" accept="image/*">
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.Id" class="control-label"></label>
                <input asp-for="FileUpload.Id" class="form-control" />
                <span asp-validation-for="FileUpload.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>